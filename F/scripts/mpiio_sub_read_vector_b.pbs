#!/bin/bash --login

# PBS job options (name, compute nodes, job time)
#PBS -l select=22
#PBS -l walltime=00:05:00
#PBS -A d131
#PBS -N sub_read_vec_b

# Change to the directory that the job was submitted from
# (remember this should be on the /work filesystem)
cd $PBS_O_WORKDIR

NPROCS=512
XPROCS=32
YPROCS=16
BARRIER=1
IOWORKERS=256

echo "4 stripes"
aprun -n $NPROCS ./mpiio_sub_read_vector /work/d131/d131/shared/data/defstriped/finput0048000x0021600.dat 48000 21600 $XPROCS $YPROCS $BARRIER $IOWORKERS
echo "max stripes"
aprun -n $NPROCS ./mpiio_sub_read_vector /work/d131/d131/shared/data/striped/finput0048000x0021600.dat 48000 21600 $XPROCS $YPROCS $BARRIER $IOWORKERS

XPROCS=32
YPROCS=16

echo "max stripes"
aprun -n $NPROCS ./mpiio_sub_read_vector /work/d131/d131/shared/data/striped/finput0160000x0072000.dat 160000 72000 $XPROCS $YPROCS $BARRIER $IOWORKERS

